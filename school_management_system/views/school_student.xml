<odoo>
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>

                <sheet>


                    <group>
                        <group>
                            <field name="name"/>
                            <field name="class_id"/>


                        </group>
                        <group>


                            <field name="year"/>

                        </group>


                    </group>

                    <notebook>
                        <page string="Subjects">
                            <field name="subject_ids"/>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="class_id"/>
                <field name="year"/>

            </tree>
        </field>
    </record>

    <record id="school_student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Student!
            </p>
        </field>
    </record>


    <menuitem id="school_student" parent="menu_root" name="Student"
              action="school_student_action" sequence="4"/>

</odoo>